
class Book:
    """the class for the book to show the book's info, with default values """
    def __init__(self, title="How to have a life", author="Ahmad", price=300):
        self.title = title
        self.author = author
        self.price = price

    # method to print the book's info
    def books_info(self):
        print(f"Title: {self.title}\nAuthor: {self.author}\nPrice: {self.price}\n")


# Create two objects of the class with different values
book1 = Book()  # Uses the default values
book2 = Book("Learn Python", "John Doe", 500)  # Overrides the default values

# Display the information of both books
book1.books_info()
book2.books_info()
